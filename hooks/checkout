#!/bin/bash
set -eo pipefail

plugin_root="${BASH_SOURCE%/*}/.."

venv_dir="${BUILDKITE_BUILD_CHECKOUT_PATH}/../.perforce-plugin-venv"

python3 -m pip install virtualenv==16.7.7
python3 -m virtualenv "${venv_dir}"

platform=$(python3 -c "import platform; print(platform.system())")
if [[ "${platform}" == "Windows" ]]; then
    venv_bin="${venv_dir}/Scripts"
else
    venv_bin="${venv_dir}/bin"
fi


"${venv_bin}/python3" -m pip install -r "${plugin_root}/python/requirements.txt"

"${venv_bin}/python3" "${plugin_root}/python/checkout.py"
